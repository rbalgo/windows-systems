{
  // editor
  "editor.quickSuggestionsDelay": 1,
  "editor.suggest.localityBonus": true,
  "editor.tabCompletion": "on",
  "editor.rulers": [115],
  "editor.formatOnSave": false,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSaveMode": "modifications",
  "files.defaultLanguage": "powershell",
  "files.autoSave": "onWindowChange",

  // powershell settings changes

  // you can specify a custom location for the powershell.exe/pwsh.exe file
  // not required if you just want to use the default locations
  "powershell.powerShellAdditionalExePaths": {
    "PS5.1": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "PS7": "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
  },
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.integratedConsole.showOnStartup": true,
  "powershell.powerShellDefaultVersion": "PS5.1",
  "powershell.codeFormatting.preset": "Stroustrup",
  "powershell.codeFormatting.openBraceOnSameLine": true,
  "powershell.codeFormatting.alignPropertyValuePairs": true,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.startAutomatically": true,
  "[powershell]": {
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "files.trimTrailingWhitespace": true,
    "files.encoding": "utf8bom",
    "files.autoGuessEncoding": true,
  },

  // TO DO Tree Extension Configuration
  "todo-tree.general.tags": [
    "BUG",
    "MR-FUTURE",
    "MR-SUGGESTION",
    "XBUG",
    "XMR-FUTURE",
    "XMR-SUGGESTION",
  ],
  "todo-tree.tree.autoRefresh": true,
  "todo-tree.highlights.customHighlight": {
    "BUG": {
      "icon": "bug",
      "foreground": "#000000",
      "background": "#FF0000",
      "iconColour": "#FF0000",
      "type": "line",
      "gutterIcon": true
    },
    "MR-FUTURE": {
      "icon": "paper-airplane",
      "foreground": "#000000",
      "background": "#30D5C8",
      "iconColour": "#30D5C8",
      "type": "line",
      "gutterIcon": true
    },
    "MR-SUGGESTION": {
      "icon": "light-bulb",
      "foreground": "#000000",
      "background": "#FFA500",
      "iconColour": "#FFA500",
      "type": "line",
      "gutterIcon": true
    },
    "XBUG": {
      "icon": "check",
      "foreground": "#000000",
      "background": "#008000",
      "iconColour": "#008000",
      "type": "line",
      "gutterIcon": true
    },
    "XMR-FUTURE": {
      "icon": "check",
      "foreground": "#000000",
      "background": "#008000",
      "iconColour": "#008000",
      "type": "line",
      "gutterIcon": true
    },
    "XMR-SUGGESTION": {
      "icon": "check",
      "foreground": "#000000",
      "background": "#008000",
      "iconColour": "#008000",
      "type": "line",
      "gutterIcon": true
    },
  },
  // PSScriptAnalyzer Settings
  "powershell.scriptAnalysis.settingsPath": ".vscode\\PSScriptAnalyzerSettings.psd1",
  "powershell.scriptAnalysis.enable": true,

  // indent-rainbow settings, Using the light mode
  "indentRainbow.indicatorStyle": "light",

  // we use a simple 1 pixel wide line
  "indentRainbow.lightIndicatorStyleLineWidth": 1,

  // the same colors as above but more visible
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  "indentRainbow.colorOnWhiteSpaceOnly": true,
}